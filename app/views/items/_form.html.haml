- form_for(@item) do |f|
  -if @item.errors.any?
    .error_explanation
      %h2 #{pluralize(@item.errors.count, "error")} prohibited this item from being saved\:

      %ul
      - @item.errors.full_messages.each do |msg| 
        %li= msg 

  .field
    = f.label :name 
    = f.text_field :name
		
  .field
    = f.label :location 
    = f.text_area :location 
  
  .field
    = f.label :picture 
    = f.file_field :picture 
	
  / Add picture from URL
	
  .field
    = f.label :quantity 
    = f.text_field :quantity 
	
  .field
    = f.label :unit 
    = f.text_field :unit 
		
  .field
    = f.label :notes 
    = f.text_area :notes
	
  .field
    = f.label :marked, "Bought Already?" 
    = f.check_box :marked 
	
  .actions
    = f.submit 
